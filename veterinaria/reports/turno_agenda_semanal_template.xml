<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="reporte_agenda_semanal">
        <t t-call="web.html_container">
            <t t-set="cantidad_turnos" t-value="0"/>
            <t t-foreach="docs" t-as="o">
                <t t-set="cantidad_turnos" t-value="cantidad_turnos + 1"/>
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-if="o.inicio">
                            <div class="oe_structure"/>
                            <span>Turnos</span>
                            <table class="table table-sm o_main_table" name="turno">
                                <thead>
                                    <tr>
                                        <th name="th_fecha" class="text-left">
                                            <span>Fecha</span>
                                        </th>
                                        <th name="th_paciente" class="text-left">
                                            <span>Paciente</span>
                                        </th>
                                        <th name="th_responsable" class="text-left">
                                            <span>Responsable</span>
                                        </th>
                                        <th name="th_practica" class="text-left">
                                            <span>Pr√°ctica</span>
                                        </th>
                                        <th name="th_observaciones" class="text-left">
                                            <span>Observaciones</span>
                                        </th>
                                    </tr>
                                </thead>
                                    <tr>
                                        <td>
                                            <span t-field="o.inicio"/>
                                        </td>
                                        <td>
                                            <span t-field="o.paciente"/>
                                        </td>
                                        <td>
                                            <span t-field="o.responsable"/>
                                        </td>
                                        <td>
                                            <span t-field="o.practica"/>
                                        </td>
                                        <td>
                                            <span t-field="o.observaciones"/>
                                        </td>
                                    </tr>
                                <tr>
                                    <td colspan="2">
                                        <strong>Cantidad turnos</strong>
                                    </td>
                                    <td>
                                        <t t-esc="cantidad_turnos"/>
                                    </td>
                                </tr>
                            </table>
                        </t>

                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
